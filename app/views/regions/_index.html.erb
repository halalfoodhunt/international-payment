 <% @regions.each do |region| %>
 <tr>
  <td class="col-md-9"><%= region.name %></td>
  <td class="col-md-1"><%= link_to edit_region_path(regions), remote: true do %>
    <i class="fa fa-pencil" style="color:white"></i><% end %>
  </td>
  <td class="col-md-1"><%= link_to region, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-trash-o" style="color:white"></i><% end %>
  </td>
</tr>
<% end %>