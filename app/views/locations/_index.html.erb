 <% @locations.each do |location| %>
 <tr>
  <td class="col-md-9"><%= location.name %></td>
  <td class="col-md-1"><%= link_to edit_location_path(location), remote: true do %>
    <i class="fa fa-pencil" style="color:brown"></i><% end %>
  </td>
  <td class="col-md-1"><%= link_to location, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-trash-o" style="color:brown"></i><% end %>
  </td>
</tr>
<% end %>