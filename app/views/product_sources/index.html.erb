<p id="notice"><%= notice %></p>

<h1>Listing Product Sources</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_sources.each do |product_source| %>
      <tr>
        <td><%= product_source.name %></td>
        <td><%= link_to 'Show', product_source %></td>
        <td><%= link_to 'Edit', edit_product_source_path(product_source) %></td>
        <td><%= link_to 'Destroy', product_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

