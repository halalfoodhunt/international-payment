<div class="container-fluid">
  <div class="row">
    <%= render 'layouts/merchant_sidebar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="padding:0;">
      <%= render 'layouts/topbar' %>
      <div class="col-md-10 col-md-offset-1" style="margin-bottom:20px;">
        <center><h4><strong>Welcome to halalfoodhunt.comâ€™s Merchant's dashboard!</strong></h4>
          <p>The information you put in here will determine what your hungry customers will read about your place. Give them the right information to help them decide where to eat!</p>
          <img src="http://halalfoodhunt.com/friends/wp-content/uploads/2016/11/Youtube.jpg" class="img-responsive" alt="Responsive image">
        </center>
        <p id="notice"><%= notice %></p>
        <h1>Listing Listings</h1>
        <table class="table table-responsive">
          <thead>
            <tr>
              <th>Merchant</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @listings.each do |listing| %>
            <tr>
              <td></td>
              <td><%= link_to 'Show', listing %></td>
              <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
              <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <table class="table table-responsive">
          <thead>
            <tr>
                <th></th>
                <th>Business name</th>
                <th>Halal Status</th>
                <th>Verified</th>
                <th>Status</th>
                <th>Expiry Date</th>
                <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @places.each do |place| %>
            <tr>
             <td><%= image_tag place.logo.url(:thumb), :class => "img-circle" %></td>
                <td><%= link_to place.business_name, edit_place_path(place) %></td>
                <td><%= link_to place.qualifying_type.name %></td>
                <td><%= place.verified ? "Verified" : "Unverified" %></td>
                <td><%= place.draft ? "Published" : "Draft" %></td>
                <td><%= place.expiry_date.strftime("%d %b %Y") %></td>
                <td><%= link_to 'Show', place %></td>
                <td><%= link_to 'Edit', edit_place_path(place) %></td>
                <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
