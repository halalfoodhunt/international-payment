<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h3>Delete Class Types</h3>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete <b><%= @class_type.name %></b>?
  </div>
  <div class="modal-footer">
    <%= link_to "Delete", class_type_path(@class_type), method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "Cancel", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
  </div>
</div>