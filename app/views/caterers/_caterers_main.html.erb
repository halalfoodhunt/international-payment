    <% @caterers.each do |caterers| %>
    <div class="col-xs-12 col-sm-6 col-md-6 padding-bottom">
      <% if caterers.verified == true %>
      <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(caterers.qualifying_criterium.icon.url(:medium), :class => "img-responsive") %></span>
<% else %>
      <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;">
    <%= image_tag('unverified.png', :alt => "Unverified", :class => "img-responsive", :style => "width:120px;height:30px;") %>
      </span>
<% end %>
      <div style="padding:0px; height:350px; position:relative;" class="thumbnail">
        <%= image_tag caterers.featured_image.url(:medium), :class => "img_responsive" %>
        <div class="caption">
          <div class="media">
            <div class="media-left">
              <%= image_tag caterers.logo.url(:medium), :class => "img-circle-40" %>
            </div>
            <div class="media-body">
              <h5 class="media-heading"><%= link_to caterers.business_name, caterers_path(caterers) %></h5>
              <p><i class="fa fa-map-marker"></i> <%= caterers.operating_address %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>