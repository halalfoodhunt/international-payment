 <% @service_types.each do |service_type| %>
 <tr>
  <td class="col-md-1"><%= image_tag(service_type.icon.url(:square), :class => "img_circle") %></td>
  <td class="col-md-9"><%= service_type.name %></td>
  <td class="col-md-1"><%= link_to edit_service_type_path(service_type), remote: true do %>
    <i class="fa fa-pencil" style="color:white"></i><% end %>
  </td>
  <td class="col-md-1"><%= link_to service_type, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-trash-o" style="color:white"></i><% end %>
  </td>
</tr>
<% end %>