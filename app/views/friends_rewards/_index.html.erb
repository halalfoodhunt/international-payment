 <% @friends_rewards.each do |friends_rewards| %>
 <tr>
  <td class="col-md-1"><%= image_tag(friends_rewards.icon.url(:square), :class => "img_circle") %></td>
  <td class="col-md-9"><%= friends_rewards.name %></td>
  <td class="col-md-1"><%= link_to edit_friends_reward_path(friends_rewards), remote: true do %>
    <i class="fa fa-pencil" style="color:white"></i><% end %>
  </td>
  <td class="col-md-1"><%= link_to friends_rewards, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-trash-o" style="color:white"></i><% end %>
  </td>
</tr>
<% end %>