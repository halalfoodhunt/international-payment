    <% @ecommerss.each do |ecommers| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <% if ecommers.verified == true %>
      <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(ecommers.type.icon.url(:medium), :class => "img-responsive") %></span>
<% else %>
      <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;">
    <%= image_tag('unverified.png', :alt => "Unverified", :class => "img-responsive", :style => "width:120px;height:30px;") %>
      </span>
<% end %>
      <div style="padding:0px; height:280px; position:relative;" class="thumbnail">
        <%= image_tag ecommers.featured_image.url(:medium), :class => "img_responsive" %>
        <div class="caption">
          <div class="media">
            <div class="media-left">
              <%= image_tag ecommers.logo.url(:medium), :class => "img-circle-40" %>
            </div>
            <div class="media-body">
              <h5 class="media-heading"><%= link_to ecommers.business_name, ecommers_path(ecommers) %></h5>
              <p><i class="fa fa-map-marker"></i> <%= ecommers.operating_address %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>