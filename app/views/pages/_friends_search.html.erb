<div class="col-sm-12 col-md-12">
  <div class="col-sm-12 col-md-2" style="padding:0">
    <h6 style="text-align:left">Search for a friends rewards</h6>
  </div>
  <%= search_form_for @search do |f| %>
  <div class="col-sm-12 col-md-10" style="padding:0">
    <div class="form-group" style="margin-bottom: 0; background: rgba(255,255,255,1); color:black;">
      <%= f.text_field :business_name_cont, class: "form-control" %>
    </div>
    <br>
    <div class="col-sm-12 col-md-6" style="padding:2px">
     <%= f.collection_select(:place_locations_id_eq, Location.all, :id, :name, {:include_blank => "Locations"}, {:class=>'form-control'}) %><br>
   </div>
    <div class="col-sm-12 col-md-6" style="padding:2px">
    <%= f.collection_select(:place_friends_rewards_id_eq, FriendsReward.all, :id, :name, {:include_blank => "Friends Rewards"}, {:class=>'form-control'}) %><br>
  </div>
  </div>
  <% end %>