<div class="col-sm-12 col-md-12">
  <div class="col-sm-12 col-md-12" style="padding:0">
    <h6 style="text-align:left">Search for an online_grocer</h6>
  </div>
  <%= search_form_for @search do |f| %>
  <div class="col-sm-12 col-md-12" style="padding:0">
    <div class="form-group" style="margin-bottom: 0; background: rgba(255,255,255,1); color:black;">
      <%= f.text_field :brand_name_cont, class: "form-control" %>
    </div>
    <br>
    <div class="col-sm-12 col-md-6" style="padding:2px">
     <%= f.collection_select(:grocer_types_id_eq_any, GrocerType.all, :id, :name, {:include_blank => "Grocer Types"}, {:class=>'form-control'}) %><br>
     <%= f.collection_select(:location_id_eq, Location.order(:name), :id, :name, {:include_blank => "Locations"}, {:class=>'form-control'}) %>
   </div>
   <div class="col-sm-12 col-md-6" style="padding:2px">
     <%= f.collection_select(:grocer_service_types_id_eq_any, GrocerServiceType.all, :id, :name, {:include_blank => "Grocer Service Types"}, {:class=>'form-control'}) %><br>
     <%= f.collection_select(:price_range_id_eq, PriceRange.all, :id, :price, {:include_blank => "Price Range"}, {:class=>'form-control'}) %>
     <br>
  </div>
  <div>
    <%= f.submit "Search", class: "btn btn-raised btn-block btn-danger" %>
  </div>
</div>
<% end %>