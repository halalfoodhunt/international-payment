<div class="col-sm-12 col-md-12">
  <div class="col-sm-12 col-md-2" style="padding:0">
    <h6 style="text-align:left">Search for a supplier</h6>
  </div>
  <%= search_form_for @search do |f| %>
  <div class="col-sm-12 col-md-10" style="padding:0">
    <div class="form-group" style="margin-bottom: 0; background: rgba(255,255,255,1); color:black;">
      <%= f.text_field :business_name_or_operating_address_cont, class: "form-control" %>
    </div>
    <br>
    <div class="col-sm-12 col-md-6" style="padding:2px">
     <br>
     <%= f.collection_select(:food_types_id_eq_any, FoodType.all, :id, :name, {:include_blank => "Food Types"}, {:class=>'form-control'}) %>
   </div>
   <div class="col-sm-12 col-md-6" style="padding:2px">
    <%= f.collection_select(:supplier_highlights_id_eq_any, SupplierHighlight.all, :id, :name, {:include_blank => "Supplier Highlights"}, {:class=>'form-control'}) %>
     <br>
    <%= f.collection_select(:price_range_id_eq, PriceRange.all, :id, :price, {:include_blank => "Price Range"}, {:class=>'form-control'}) %><br>
  </div>
  <div>
    <%= f.submit "Search", class: "btn btn-raised btn-block btn-primary" %>
  </div>
</div>
<% end %>