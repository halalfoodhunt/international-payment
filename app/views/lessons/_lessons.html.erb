    <% @lessons.each do |lesson| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <% if lesson.verified == true %>
      <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"></span>
<% else %>
      <span class="label label-danger" style="position:absolute; z-index:100; padding:0px 8px 0px 8px; left:7%; top:3%;"><h6 style="line-height:1; margin:8px 0 8px 0;">Unverified</h6></span>
<% end %>
      <div style="padding:0px; height:280px; position:relative;" class="thumbnail">
        <%= image_tag lesson.featured_image.url(:medium), :class => "img_responsive" %>
        <div class="caption">
          <div class="media">
            <div class="media-left">
              <%= image_tag lesson.logo.url(:medium), :class => "img-circle-40" %>
            </div>
            <div class="media-body">
              <h5 class="media-heading"><%= link_to lesson.brand_name, lesson_path(lesson) %></h5>
              <p><i class="fa fa-map-marker"></i><%= lesson.preferred_sign_up_method %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>