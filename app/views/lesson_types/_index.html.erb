 <% @lesson_types.each do |lesson_type| %>
 <tr>
  <td class="col-md-1"><%= image_tag(caterer_type.icon.url(:square), :class => "img_circle") %></td>
  <td class="col-md-9"><%= lesson_type.name %></td>
  <td class="col-md-1"><%= link_to edit_lesson_type_path(lesson_type), remote: true do %>
    <i class="fa fa-pencil" style="color:brown"></i><% end %>
  </td>
  <td class="col-md-1"><%= link_to lesson_type, method: :delete, data: { confirm: 'Are you sure?' } do %>
