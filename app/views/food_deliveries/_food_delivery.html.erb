    <% @food_deliveries.each do |food_delivery| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <% if food_delivery.verified == true %>
      <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(food_delivery.qualifying_criterium.icon.url(:medium), :class => "img-responsive") %></span>
<% else %>
      <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;">
    <%= image_tag('unverified.png', :alt => "Unverified", :class => "img-responsive", :style => "width:120px;height:30px;") %>
      </span>
<% end %>
      <div style="padding:0px; height:280px; position:relative;" class="thumbnail">
        <%= image_tag food_delivery.featured_image.url(:medium), :class => "img_responsive" %>
        <div class="caption">
          <div class="media">
            <div class="media-left">
              <%= image_tag food_delivery.logo.url(:medium), :class => "img-circle-40" %>
            </div>
            <div class="media-body">
              <h5 class="media-heading"><%= link_to food_delivery.brand_name, food_delivery_path(food_delivery) %></h5>
              <p><% @food_delivery.food_delivery_types.each do |food_delivery_type| %>
              <%= image_tag food_delivery_type.icon.url(:thumb) %> <%= food_delivery_type.name %>
              <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>