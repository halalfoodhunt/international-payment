 <% @supplier_highlights.each do |supplier_highlight| %>
 <tr>
    <td class="col-md-1"><%= image_tag(supplier_highlight.icon.url(:square), :class => "img_circle") %></td>
  <td class="col-md-9"><%= supplier_highlight.name %></td>
  <td class="col-md-1"><%= link_to edit_supplier_highlight_path(supplier_highlight), remote: true do %>
    <i class="fa fa-pencil" style="color:white"></i><% end %>
  </td>
  <td class="col-md-1"><%= link_to supplier_highlight, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-trash-o" style="color:white"></i><% end %>
  </td>
</tr>
<% end %>