 <% @days.each do |day| %>
 <tr>
  <td class="col-md-9"><%= day.name %></td>
  <td class="col-md-1"><%= link_to edit_day_path(day), remote: true do %>
    <i class="fa fa-pencil" style="color:brown"></i><% end %>
  </td>
  <td class="col-md-1"><%= link_to day, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <i class="fa fa-trash-o" style="color:brown"></i><% end %>
  </td>
</tr>
<% end %>